{% extends "base.twig" %}

{% set page_title %}{{ post.title }}{% endset %}

{% block main %}
    <div class="container" id="article">
        <h1>{{ page_title }}</h1>

        <strong>{{ post.authorName }}</strong>
        &nbsp;
        <time datetime="{{ post.dateTime|date('Y-m-D') }}">
            {{ post.dateTime|date('j. n. Y') }}
        </time>

        <br>

        <div class="card mt-4 mb-4">
            <div class="card-body text-bigger">
                {{ post.perex|markdown|raw }}
            </div>
        </div>

        {{ post.htmlContent|raw }}

        <br>

        <div class="container">
            {% include "_snippets/disqus_comments.twig" %}
        </div>

        <br>
    </div>

{#    <script id="dsq-count-scr" src="https://{{ disqus_name }}.disqus.com/count.js" async defer></script>#}
{% endblock %}
