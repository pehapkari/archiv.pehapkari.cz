{% macro video_title(video) %}
    {% if video.thumbnail == '' %}
        <table class="no_thumbnail_video_square align-middle border-0">
            <tr>
                <td class="align-middle pl-3 pr-3">
                    {{ video.title }}
                </td>
            </tr>
        </table>
    {% else %}
        <div class="mt-2">{{ video.title }}</div>
    {% endif %}
{% endmacro %}

{# @var video \Pehapkari\Youtube\ValueObject\Video #}
<div class="col-12 col-md-6 col-xl-4 mb-3 video-row-item">
    <a href="{{ path('video_detail', {'slug': video.slug }) }}">
        <div class="card shadow-card border-0">
            <div class="card-body">
                {% if video.thumbnail %}
                    <img src="{{ video.thumbnail }}" alt="" style="max-width: 100%" class="mb-2">
                {% endif %}

                {{ _self.video_title(video) }}
            </div>
        </div>
    </a>
</div>
