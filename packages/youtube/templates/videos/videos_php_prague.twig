{% extends 'base.twig' %}

{% set page_title %}Have you missed PHP Prague Conference{% endset %}

{% block main %}
    <div id="videos" class="container white_break_page_end">
        <h1>{{ page_title }}</h1>

        <div class="text-bigger">
            We organize international PHP conference in Prague every 2 years.
        </div>

        {# @var recorded_conference \Pehapkari\Youtube\ValueObject\RecordedConference #}
        {% for recorded_conference in recorded_conferences %}
            <h2 class="mt-5">{{ recorded_conference.title }}</h2>

            <div class="row">
                {% for video in recorded_conference.videos %}
                    {% include "_snippet/video_row.twig" %}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
